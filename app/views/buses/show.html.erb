<div class="input-group">
        <span class="input-group-btn">
          <button class="btn btn-default" type="button" onclick="codeAddress()">Create Alert!</button>
        </span>
        <form onsubmit="codeAddress(); return false">
          <input id="address" class="form-control" placeholder="Enter Address">
        </form>
</div><!-- /input-group --> 

<div class="col-xs-9">
      <html>
        <body>

          <% latLonArr = Bus.parseLatLon(@bus) %>
          <% html = Bus.imgStr(latLonArr) %>

          <% img_height = 400 %>
          
          <img src=<%= html %> alt="Lamp" width=<%= img_height.to_s %> height=<%= img_height.to_s %> >

        </body>
      </html>
</div>

